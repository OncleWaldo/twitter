<form method="post" action="{{ path('tag_post_delete', {'id': tag_post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag_post.id) }}">
    <button class="btn">Delete</button>
</form>
